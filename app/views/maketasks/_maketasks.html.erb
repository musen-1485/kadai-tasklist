<% if maketasks.any? %>
  <ul class="list-unstyled mt-2">
    <% maketasks.each do |maketask| %>
      <li class="d-flex">
        <img class="rounded me-2 mb-5" src="<%= gravatar_url(maketask.user, { size: 64 }) %>" alt="">
        <div>
          <div>
            <%= link_to maketask.user.name, user_path(maketask.user), class: "text-decoration-none" %> <span class="text-muted">posted at <%= maketask.created_at %></span>
          </div>
          <div>
            <p><%= maketask.content %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>